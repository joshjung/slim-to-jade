div(ng-controller='resetPasswordCtrl')
  #login-cont
    form#login-form(name='resetPasswordForm')
       fieldset
        img(src='/images/logo_grayscale.png')
        .notifications
          div(alert='')
        .control-group.first
          input.form-control(placeholder='Email address' type='email' required='' id='emailInput' ng-model='email' focus-me='true', name='email')
        .control-group.form-buttons
          input.btn.btn-primary(type='submit' value='Reset Password' ng-click='resetPassword(email)', ng-disabled='resetPasswordForm.$invalid')
        .control-group.forgot
          a(href='#') Cancel
          button.btn.btn-success(type='submit', ng-disabled='loginForm.$invalid')
    div.loader(us-spinner='defaultSpin', visible-if='loading')
